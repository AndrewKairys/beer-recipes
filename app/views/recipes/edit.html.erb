<h1>Edit Recipe</h1>

<%= form_for @recipe do |f| %>
  <% if @recipe.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@recipe.errors.count, "error") %>
        prohibited this post from being saved:
      </h2>

      <ul>
      <% @recipe.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label "Name:" %>
  <%= f.text_field :name %><br>
  <%= f.label "Boil Time (min):" %>
  <%= f.number_field :boil_time %><br></br>

  <section>
    <h3>Fermentables</h3>

    <%= f.collection_check_boxes(:fermentable_ids, Fermentable.all, :id, :name) do |b| %>
      <div class="row">
        <%= b.label(class: "check_box") do %>
          <div class="col-xs-4">
            <%= b.check_box(class: "check_box") %>
            <%= b.object.name %>
          </div>
        <% end %>
      </div>
    <% end %><br>

    <label>New Fermentable Name:</label>
    <input type="text" name="recipe[fermentables_attributes][][name]" >

  </section>

  <section>
    <h3>Hops</h3>

    <%= f.collection_check_boxes(:hop_ids, Hop.all, :id, :name) do |b| %>
      <div class="row">
        <%= b.label(class: "check_box") do %>
          <div class="col-xs-4">
            <%= b.check_box(class: "check_box") %>
            <%= b.object.name %>
          </div>
        <% end %>
      </div>
    <% end %><br>

    <label>New Hop Name:</label>
    <input type="text" name="recipe[hops_attributes][][name]" >

  </section>

  <section>
    <h3>Yeasts</h3>

    <%= f.collection_check_boxes(:yeast_ids, Yeast.all, :id, :variety) do |b| %>
      <div class="row">
        <%= b.label(class: "check_box") do %>
          <div class="col-xs-4">
            <%= b.check_box(class: "check_box") %>
            <%= b.object.variety %>
          </div>
        <% end %>
      </div>
    <% end %><br>

    <label>New Yeast Brand:</label>
    <input type="text" name="recipe[yeasts_attributes][][brand]" ><br>

    <label>New Yeast Name:</label>
    <input type="text" name="recipe[yeasts_attributes][][variety]" >

  </section>

  <br></br>
  <%= f.submit %>
<% end %>
