            <%#= b.check_box(class: "check_box", checked: "checked") %>
            <%#= b.object.hop.name %> |

            <label>Amount:</label>
            <input type="number" name="recipe[hop_amounts][][<%#= b.object.id %>]" value="<%#= b.object.amount %>">
            <label>Addition Time:</label>
            <input type="number" name="recipe[addition_time][][<%#= b.object.id %>]" value="<%#= b.object.addition_time %>"><br>
          </div>
        <%# end %>
      </div>
    <%# end %><br> -->

    <!-- <%#= f.collection_check_boxes(:hop_ids, @unchecked_hops.sort_by { |hop| hop.name}, :id, :name) do |b| %>
      <div class="row">
        <%#= b.label(class: "check_box") do %>
          <div class="col-xs-4">
            <%#= b.check_box(class: "check_box") %>
            <%#= b.object.name %> |

            <label>Amount:</label>
            <input type="number" name="recipe[unchecked_hop_amounts][][<%#= b.object.id %>]">oz
            <label>Addition Time:</label>
            <input type="number" name="recipe[unchecked_addition_time][][<%#= b.object.id %>]"><br>
          </div>
        <%# end %>
      </div>
    <%# end %><br> -->

    <%= f.collection_check_boxes(:hop_ids, @hops.order(:name), :id, :name) do |b| %>
      <div class="row">
        <%= b.label(class: "check_box") do %>
          <div class="col-xs-4">
            <%= b.check_box(class: "check_box") %>
            <%= b.object.name %> |

            <% if recipe_hop = @recipe.recipe_hops.find { |rh| rh.hop_id == b.object.id } %>
              <label>Amount:</label>
              <input type="number" name="recipe[hop_amounts][][<%= b.object.id %>]" value="<%= recipe_hop.amount %>"> oz
              <label>Addition Time:</label>
              <input type="number" name="recipe[addition_time][][<%= b.object.id %>]" value="<%= recipe_hop.addition_time %>"><br>
            <% else %>
              <label>Amount:</label>
              <input type="number" name="recipe[hop_amounts][][<%= b.object.id %>]"> oz
              <label>Addition Time:</label>
              <input type="number" name="recipe[addition_time][][<%= b.object.id %>]"><br>
            <% end %>

          </div>
        <% end %>
      </div>
    <% end %>

    <h4>Add a new hop variety to your recipe</h4>
    <%= f.fields_for :hops do |hop| %>
      <% if hop.object.id.nil? %>
        <%= hop.label :name %>
        <%= hop.text_field :name %>
        <%= hop.label :alpha_acids %>
        <%= hop.text_field :alpha_acids %>

        <label>Amount:</label>
        <input type="number" name="recipe[new_hop][][amount]">
        <label>Addition Time:</label>
        <input type="number" name="recipe[new_hop][][addition_time]"><br>
      <% end %>
    <% end %>

  </section>

  <section>
    <h3>Yeasts</h3>

    <%= f.collection_check_boxes(:yeast_ids, @yeasts, :id, :variety) do |b| %>
      <div class="row">
        <%= b.label(class: "check_box") do %>
          <div class="col-xs-4">
            <%= b.check_box(class: "check_box") %>
            <%= b.object.variety %>
          </div>
        <% end %>
      </div>
    <% end %><br>

  </section>

  <br></br>
  <%= f.submit %>
<% end %>
